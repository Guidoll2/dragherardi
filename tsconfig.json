{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,         // Correctly placed here
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,       // Correctly placed here
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "baseUrl": "." // <-- Make sure you also have this line for "@/ imports"
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
     "**/*.d.ts" ,
    ".next/types/**/*.ts",
    "next.config.mjs",
    "src/types/**/*.d.ts" 
  ],
  "exclude": [
    "node_modules"
  ]
}